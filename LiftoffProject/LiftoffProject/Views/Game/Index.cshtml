@model List<LiftoffProject.Models.Game>

<h1>@ViewBag.Title</h1>

<div align="right">
    <a asp-controller="Game" asp-action="Add" style="font-size:130%">Add New Game</a>
</div>

@if (Model.Count == 0)
{
    <p>No games to display</p>
}
else
{ 
    

    <table class="table">
        <tr>
            <th>Name</th>
            <th>Box Art</th>
        </tr>

        @foreach (Game game in Model)
        {
            <tr>
                <td><a asp-controller="Game" asp-action="Details" asp-route-gameId="@game.Id">@game.Name</a></td>
                @if (game.Cover != 0)
                {
                    
                <td><img src="@game.GameCover.Url" @*height="@(@game.GameCover.Height/10)" width="@(@game.GameCover.Width/10)"*@ alt="@game.Name" style="max-height:100%; max-width:100%"/></td>
                }
                else
                {
                    <td>No Box Art</td>
                }
                <td><a asp-controller="Game" asp-action="Delete" asp-route-gameId="@game.Id">Delete</a></td>
            </tr>
        }

    </table>
}
